<%= content_tag :ul, class: "list-group" do %>
  <%= content_tag :table, class: "table table-striped" do %>
    <%= content_tag :thead do %>
      <%= content_tag :tr do %>
        <%= content_tag :th do %>
          Name
        <% end %>
        <%= content_tag :th do %>
          URL
        <% end %>
        <%= content_tag :th do %>
          Times Saved
        <% end %>
      <% end %>
    <% end %>
    <%= content_tag :tbody do %>
      <% @links_info.each do |name, url, number| %>
        <%= content_tag :tr do %>
          <%= content_tag :td do %>
            <%= content_tag :a, href: url do %>
              <%= name %>
            <% end %>
          <% end %>
          <%= content_tag :td do %>
            <%= url %>
          <% end %>
          <%= content_tag :td do %>
            <%= number %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
